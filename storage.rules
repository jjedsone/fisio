rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Imagens de serviços - Público pode ler, Admin pode escrever
    match /servicos/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Fotos de perfil - Público pode ler, Admin pode escrever
    match /perfil/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Anexos de conversas - Admin pode ler/escrever
    match /anexos/{anexoId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

